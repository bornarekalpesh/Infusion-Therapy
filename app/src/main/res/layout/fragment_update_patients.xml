<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardElevation="10dp"
            app:cardCornerRadius="10dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_margin="20dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="5dp"
                    android:text="First Name"
                    android:textSize="24dp" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="@color/colorMain">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/patientName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:text="Last Name"
                    android:textSize="24dp" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="@color/colorMain">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/patientLast"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:text="Date of Birth"
                    android:textSize="24dp" />

                <com.google.android.material.textfield.TextInputLayout

                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    app:startIconDrawable="@android:drawable/ic_menu_my_calendar"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="@color/colorMain">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tv_date_picker"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:text="Email address"
                    android:textSize="24dp" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="@color/colorMain">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:id="@+id/patientEmail"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:text="Phone"
                    android:textSize="24dp" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="@color/colorMain">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/patientMobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:text="Address"
                    android:textSize="24dp" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="@color/colorMain">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/patientAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:visibility="gone"
                    android:text="Medical History"
                    android:textSize="24dp" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:visibility="gone"
                    app:boxStrokeColor="@color/colorMain">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:textSize="20dp"
                        android:visibility="gone"
                        android:justificationMode="inter_word"
                        android:lineSpacingExtra="10dp"
                        android:text="Amet minim mollit non deserunt ullamco est sit aliqua dolor do amet sint. Velit officia consequat duis enim velit mollit. Exercitation veniam consequat sunt nostrud amet."
                        android:layout_height="180dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:text="Allergies"
                    android:visibility="gone"
                    android:textSize="24dp" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:visibility="gone"
                    app:boxStrokeColor="@color/colorMain">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:justificationMode="inter_word"
                        android:lineSpacingExtra="10dp"
                        android:visibility="gone"
                        android:text="Nullam suspendisse ornare amet, malesuada. A quis vestibulum massa risus sit elit, urna massa dui. Viverra elit, diam consectetur at sed. Iaculis velit scelerisque pretium faucibus in semper."
                        android:textSize="20dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:visibility="gone"
                    android:text="Medication they are taking"
                    android:textSize="24dp" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:visibility="gone"
                    app:boxStrokeColor="@color/colorMain">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:textSize="20dp"
                        android:justificationMode="inter_word"
                        android:lineSpacingExtra="10dp"
                        android:text="Tortor id fermentum accumsan, euismod. Dui, non vestibulum imperdiet eget tristique faucibus et imperdiet aliquam. Lacus scelerisque urna, sit velit adipiscing ullamcorper eget. "
                        android:layout_height="180dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp"
                    android:text="Does your medical history include any of the following"
                    android:textSize="24dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardElevation="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_margin="5dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="5dp"
                            android:text="Kidney Failure"
                            android:textColor="@color/black"
                            android:textSize="24dp" />

                        <RadioGroup
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginRight="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/rd_kf_y"
                                android:layout_width="wrap_content"
                                android:text="Yes"
                                android:layout_marginRight="10dp"
                                android:textSize="22dp"
                                android:layout_height="wrap_content" />

                            <RadioButton
                                android:id="@+id/rd_kf_n"
                                android:layout_width="wrap_content"
                                android:text="No"
                                android:layout_marginLeft="10dp"
                                android:textSize="22dp"
                                android:layout_height="wrap_content" />

                        </RadioGroup>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardElevation="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_margin="10dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="5dp"
                            android:text="CHF (Congestive Heart Failure)"
                            android:textColor="@color/black"
                            android:textSize="24dp" />

                        <RadioGroup
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginRight="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/rd_chf_y"
                                android:layout_width="wrap_content"
                                android:text="Yes"
                                android:layout_marginRight="10dp"
                                android:textSize="22dp"
                                android:layout_height="wrap_content" />

                            <RadioButton
                                android:id="@+id/rd_chf_n"
                                android:layout_width="wrap_content"
                                android:text="No"
                                android:layout_marginLeft="10dp"
                                android:textSize="22dp"
                                android:layout_height="wrap_content" />

                        </RadioGroup>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardElevation="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_margin="10dp"
                        android:layout_height="wrap_content">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="5dp"
                            android:text="CKD (Chronic Kidney Diseases)"
                            android:textColor="@color/black"
                            android:textSize="24dp" />

                        <RadioGroup
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginRight="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/rd_ckd_y"
                                android:layout_width="wrap_content"
                                android:text="Yes"
                                android:layout_marginRight="10dp"
                                android:textSize="22dp"
                                android:layout_height="wrap_content" />

                            <RadioButton
                                android:id="@+id/rd_ckd_n"
                                android:layout_width="wrap_content"
                                android:text="No"
                                android:layout_marginLeft="10dp"
                                android:textSize="22dp"
                                android:layout_height="wrap_content" />

                        </RadioGroup>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardElevation="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_margin="10dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="5dp"
                            android:text="Currently on Dialysis"
                            android:textColor="@color/black"
                            android:textSize="24dp" />

                        <RadioGroup
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginRight="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/rd_cod_y"
                                android:layout_width="wrap_content"
                                android:text="Yes"
                                android:layout_marginRight="10dp"
                                android:textSize="22dp"
                                android:layout_height="wrap_content" />

                            <RadioButton
                                android:id="@+id/rd_cod_n"
                                android:layout_width="wrap_content"
                                android:text="No"
                                android:layout_marginLeft="10dp"
                                android:textSize="22dp"
                                android:layout_height="wrap_content" />

                        </RadioGroup>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:text="Next"
                    android:layout_marginTop="30dp"
                    android:textSize="18dp"
                    android:padding="15dp"
                    app:cornerRadius="20dp"
                    android:layout_marginBottom="30dp"
                    android:backgroundTint="@color/colorMain"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </ScrollView>
</layout>